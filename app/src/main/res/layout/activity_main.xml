<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_auto_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/auto_text"/>
            <Button
                android:id="@+id/btn_seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_seek_bar"/>
            <Button
                android:id="@+id/btn_rating_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_rating_bar"/>
            <Button
                android:id="@+id/btn_popup_window"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_popup_window"/>
            <Button
                android:id="@+id/btn_file_management"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_file_management"/>
            <EditText
                android:id="@+id/et_write"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="写入的内容"/>
            <Button
                android:id="@+id/btn_write_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="写一个text_write.txt文件"/>

            <Button
                android:id="@+id/btn_screen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="自动亮熄屏"/>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>